{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.js",
    "src/jest.teardown.js",
    "src/lib/**/*",
    "**/*.test.*",
    "**/__tests__/**/*",
    "coverage",
    "mount"
  ]
}
