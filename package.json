{
  "name": "context-coder",
  "version": "1.3.0",
  "description": "Context Coder: MCP server providing secure file system operations with relative path handling for AI context management",
  "license": "MIT",
  "author": "khromov",
  "homepage": "https://github.com/khromov/context-coder",
  "type": "module",
  "bin": {
    "context-coder": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "shx rm -rf dist && rollup -c && shx chmod +x dist/index.js",
    "build:analyze": "npm run build && echo 'ðŸ“Š Bundle analysis saved to stats.html'",
    "watch": "rollup -c --watch",
    "start": "node dist/index.js",
    "start:stdio": "COCO_MCP_TRANSPORT=stdio node dist/index.js --stdio",
    "start:http": "node dist/index.js",
    "start:edit": "node dist/index.js --edit-file-mode",
    "dev": "COCO_PORT=3002 COCO_DEV=true rollup -c --watch",
    "dev:stdio": "COCO_PORT=3002 COCO_DEV=true COCO_MCP_TRANSPORT=stdio ROLLUP_SERVER_ARGS='--stdio' rollup -c --watch",
    "dev:edit": "COCO_PORT=3002 COCO_DEV=true ROLLUP_SERVER_ARGS='--edit-file-mode' rollup -c --watch",
    "test": "npm run build && NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.json\" \"*.md\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "prepublishOnly": "npm run build",
    "cc-http": "npx context-coder --http",
    "check-updates": "npx npm-check-updates",
    "check-updates:upgrade": "npx npm-check-updates -u",
    "mcp": "DANGEROUSLY_OMIT_AUTH=true npx @modelcontextprotocol/inspector"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "ai-digest": "^1.4.1",
    "commander": "^14.0.0",
    "express": "^4.21.2",
    "ignore": "^7.0.5",
    "minimatch": "^10.0.3",
    "winston": "^3.17.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.5",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "shx": "^0.4.0",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "pre-commit": [
    "format"
  ]
}
